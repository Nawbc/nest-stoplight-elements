<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>{{title}}</title>
  <script src="{{#if stoplightJSUrl}}{{stoplightJSUrl}}{{else}}web-components.min.js{{/if}}" async ></script>
  <link rel="shortcut icon" href="{{favicon}}" type="image/x-icon">
  <link rel="stylesheet" href="{{#if stoplightCSSUrl}}{{stoplightCSSUrl}}{{else}}styles.min.css{{/if}}">
</head>

<body style="height:100vh">
  {{data.apiDescriptionDocument}}
  <elements-api
    {{#if apiDescriptionDocument}}apiDescriptionDocument ='{{apiDescriptionDocument}}'{{/if}}
    {{#if apiDescriptionUrl}}apiDescriptionUrl ='{{apiDescriptionUrl}}'{{/if}}
    {{#if basePath}}basePath='{{basePath}}'{{/if}}
    {{#if hideInternal}}hideInternal='{{hideInternal}}'{{/if}}
    {{#if hideTryIt}}hideTryIt='{{hideTryIt}}'{{/if}}
    {{#if hideSchemas}}hideSchemas='{{hideSchemas}}'{{/if}}
    {{#if hideExport}}hideExport='{{hideExport}}'{{/if}}
    {{#if tryItCorsProxy}}tryItCorsProxy='{{tryItCorsProxy}}'{{/if}}
    {{#if tryItCredentialPolicy}}tryItCredentialPolicy='{{tryItCredentialPolicy}}'{{/if}}
    {{#if layout}}layout='{{layout}}'{{/if}}
    {{#if logo}}logo='{{logo}}'{{/if}}
    {{#if router}}router='{{router}}'{{/if}}
  ></elements-api>
</body>

</html>